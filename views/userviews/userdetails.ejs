<%-include('header')%>
<%-include('nav')%>
<%-include('cdmlinks')%>
<br>
        <div class="container" style="background-color:white;margin-top: 2%;box-sizing: border-box;">
            <div class="row justify-content-center" style="padding-top: 1%;">
                <div class="col-lg-8">
                    <div class="card mb-4">
                        <div class="row justify-content-start">
                           
                            <div class="col-sm-3" style="margin-left:650px;">
                                <a href="/editprofile?id=<%=user.useremail %>">
                                    <i class="fas fa-edit"></i> Edit Profile
                                </a>
                            </div>
                          </div>   
                        <div class="card-body user-details-section" id="userDetailsSection" style="margin-left: 3%;">
                            <!-- Existing content -->
                            <!-- ... --> 
                                
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-5">FULL NAME</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-5"><%=user.username%></p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-3">
                                  <p class="mb-0">MOBILE NUMBER:</p>
                                </div>
                                <div class="col-sm-9">
                                  <p class="mb-5"><%=user.usercontact%></p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-3">
                                  <p class="mb-0">REFERRAL CODE:</p>
                                </div>
                                <div class="col-sm-9">
                                  <p class="mb-5"><span></span> Invite friends and get ₹50 when your friend signup.They get ₹10</span>
                                    <p>Copy Your code</p>
                                    <a href="/register?ref=<%=user.referralCode%>"><%=user.referralCode%></a></p>
                                </div>
                            </div>
                            <% for (let i = 0; i < address.length; i++) { %>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <strong><p class="mb-0">Address no:<%= i + 1 %></p></strong>
                                    </div>
                                    <div class="col-sm-7">
                                            <span class="fs-14 mb-2 d-block">
                                                <%= address[i].name %>
                                            </span>
                                            <span
                                                class="text-muted fw-normal text-wrap mb-1 d-block">
                                                <%= address[i].housenumber %>
                                            </span>
                                            <span
                                                class="text-muted fw-normal text-wrap mb-1 d-block">
                                                <%= address[i].area %>
                                            </span>
                                            <span
                                                class="text-muted fw-normal text-wrap mb-1 d-block">
                                                <%= address[i].city %>
                                            </span>
                                            <span
                                                class="text-muted fw-normal d-block">
                                                <%= address[i].state %>
                                            </span>  
                                    </div>
                                    <div class="col-sm-2">
                                        <a href="/editaddress?id=<%=address[i].id %>">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="/deleteaddress?id=<%=address[i].id %>">
                                            <i class="far fa-trash-alt"></i>
                                        </a>
                                    </div>    
                                </div>
                            <% } %>       
                          </div>   
                    </div>
                </div>
            </div>
        </div>
        
        <%-include('footer')%>
