<%-include('header')%>
<%-include('nav')%>
<%-include('cdmlinks')%>

<div style="margin-left: 600px;font-weight: bold;border-color: 1px  #192b50;">
    <h3 style="font-weight: 700;color: #192b50;" >Wallet Recharge Form</h3>
</div>

<div style="text-align: right; margin-top: 10px;margin-right: 180px;margin-bottom: 30px;">
   
    <a href="/wallethistory" class="btn btn-success">Wallet History</a>
</div>
<div class="container" style="box-shadow: inset;border-radius: 10px;background-color:#B0E0E6;">
  
        <div style="width: 260px;height: 40px;background-color: aliceblue;border-radius: 20px;margin-bottom: 26px;">
            <div id="currentBalance" style="margin-top: 20px;">
                <h5 style="margin-top: 30px;;font-weight: bold;padding-top: 14px;padding-left: 50px;">Wallet Balance: Rs  <%= wallet %></h5>
            </div>
        </div>
   
    <form  id="rechargeForm" action="/wallet" method="post">

        <label for="rechargeAmount" style="font-style:italic  ;font-weight: normal ;color: rgb(57, 56, 56);border-color: 1px  #2d1eca;font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;">Recharge Amount:</label>
        <input style="border-radius: 20px;" type="number" id="rechargeAmount" name="amount" min="1" required>
    <div style="margin-left: 60px;text-align: center;border-radius: 20px;margin-bottom: 30px;margin-top: 20px;">
        <button type="submit" style="height: 40px;  border-radius: 20px;width:160px;border: 1px solid #2d1eca;color: #2d1eca;background-color:white;">Recharge Now</button>
    </div>
    </form>
</div>


<%-include('footer')%>
