<%- include('header')-%>
  <section class="vh-100 bg-image"
    style="background-image: url('/assets/images/pets-eating-pet-food.jpg'); width: 100%;">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
      <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-12 col-md-9 col-lg-7 col-xl-6">
            <div class="card" style="border-radius: 15px;">
              <div class="card-body p-5 text-center">
                <div class="mx-auto" style="width: 100px; height: 100px;">
                  <img src="/assets/images/logo.jpg" alt="Logo" style="width: 100%; height: 100%;" class="img-fluid" />
                </div>
                <h2 class="text-uppercase text-center mb-2"><Label>WELCOME TO PRIMAL</Label></h2>
                <p class="text-black-50 mb-5">Please enter your login and password!</p>
                <form method="POST" action="/login">

                  <div class="form-outline mb-4">
                    <input type="text" name="email" id="email" class="form-control form-control-lg" autocomplete="new-email"
                      inputmode="email" style="text-transform: none;" />
                    <label class="form-label" for="form3Example3cg">Your Email</label>
                  </div>

                  <div class="form-outline mb-4">
                    <input type="password" name="password" id="password" class="form-control form-control-lg" autocomplete="new-password" />
                    <label class="form-label" for="form3Example4cg">Password</label>
                  </div>
                  <div class="d-flex justify-content-center">
                    <button type="submit"
                      class="btn btn-success btn-block btn-lg gradient-custom-4 text-body"></a>Login</button>
                  </div>
                  <p class="text-center text-muted mt-3">
                    <a href="/forgotpassword" class="fw-bold text-body"><u>Forgot Password?</u></a>
                  </p>


                  <%if(!locals.admin){%>
                    <p class="text-center text-muted mt-5 mb-0">Don't have an account? <a href="/register"
                        class="fw-bold text-body"><u>Sign up</u></a></p>

                    <%}%>
                      <p class="text-center text-muted mt-3">
                        <a href="/adminlogin" class="fw-bold text-body"><u>Is Admin?</u></a>
                      </p>
                </form>
                <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
                <script>
                   <% if (locals.errorMessage) { %>
                    Swal.fire({
                      icon: 'error',
                      title: 'Oops...',
                      text: "<%= locals.errorMessage %>",
                    });
               <% } %>
                </script>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>