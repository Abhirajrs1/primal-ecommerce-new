<%-include('header')%>
<%-include('nav')%>
<%-include('cdmlinks')%>

<div class="container mt-5">
<h2>EDIT ADDRESS</h2>
<form action="/editaddress" method="POST">

<div class="mb-3">
    <label for="name" class="form-label"></label>
    <input type="text" class="form-control" value="<%=user.useraddress[0].name%>" id="name" name="name" placeholder="Full Name*" required>
</div>
<div class="mb-3">
    <label for="housenumber" class="form-label"></label>
    <input type="text" class="form-control" value="<%= user.useraddress[0].housenumber %>" id="housenumber" id="housenumber" name="housenumber" placeholder="House Number*" required>
</div>
<div class="mb-3">
    <label for="area" class="form-label"></label>
    <input type="text" class="form-control"  value="<%= user.useraddress[0].area %>" id="area" name="area" placeholder="Area*" required>
</div>
<div class="mb-3">
    <label for="city" class="form-label"></label>
    <input type="text" class="form-control" value="<%= user.useraddress[0].city %>" id="city" name="city" placeholder="City*" required>
</div>
<div class="mb-3">
    <label for="state" class="form-label"></label>
    <input type="text" class="form-control" value="<%= user.useraddress[0].state %>" id="state" name="state" placeholder="State*" required>
</div>
<div class="mb-3">
    <label for="pincode" class="form-label"></label>
    <input type="number" class="form-control" value="<%= user.useraddress[0].pincode %>" id="pincode" name="pincode" placeholder="Pin Code*" required>
</div>
<div class="invisible">
    <input type="text" value="<%=user.useraddress[0].id %>" class="" id="id"
        name="id">
</div>

<button type="submit" class="btn btn-primary">Update Address</button>
</form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
crossorigin="anonymous"></script>

<%-include('footer')%>