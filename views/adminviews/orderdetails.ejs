<%- include('adminheader') -%>
    <%- include('adminnav') -%>

        <div class="container-fluid">
            <!-- Title -->
            <div class="d-flex justify-content-between align-items-center py-3">
                <h2 class="h5 mb-0"><a href="#" class="text-muted"></a> Order #<%= orderdetails.orderid %>
                </h2>
            </div>

            <!-- Main content -->
            <div class="row">
                <div class="col-lg-10">
                    <!-- Details -->
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="mb-3 d-flex justify-content-between">
                                <div>
                                    <span class="me-3">
                                    </span>
                                    <span class="badge rounded-pill bg-info">
                                        <%= orderdetails.status %>
                                    </span>
                                </div>
                                <div class="d-flex">
                                    <div class="dropdown">
                                        <button class="btn btn-secondary dropdown-toggle" type="button"
                                            id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                            EDIT STATUS
                                        </button>
                                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                            <li><a class="dropdown-item"
                                                    href="/editorderstatus?cancel=<%= orderdetails.orderid%>">CANCEL</a>
                                            </li>
                                            <li><a class="dropdown-item"
                                                    href="/editorderstatus?deliver=<%= orderdetails.orderid%>">DELIVERED</a>
                                            </li>
                                            <li><a class="dropdown-item"
                                                    href="/editorderstatus?transit=<%= orderdetails.orderid%>">TRANSIT</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <table class="table table-borderless">
                                <% for (let i=0; i < orderdetails.orderitems.length; i++) { %>
                                    <tbody>
                                        <tr>
                                            <td>
                                                <div class="d-flex mb-2">
                                                    <div class="flex-shrink-0">
                                                        <img src="/productImages/<%= orderdetails.orderitems[i].productimage[0] %>"
                                                            alt="" width="70" class="img-fluid">
                                                    </div>
                                                    <div class="flex-lg-grow-1 ms-3">
                                                        <h6 style="color: rgb(100, 91, 91);" class="small mb-0">
                                                            <a href="#" class="text-reset">
                                                                <b>
                                                                    <%= orderdetails.orderitems[i].productname %>
                                                                </b>
                                                            </a>
                                                        </h6>

                                                    </div>
                                                </div>
                                            </td>
                                            <td><b>Quantity: </b>
                                                <%= orderdetails.orderitems[i].productquantity %>
                                            </td>
                                            <td class="text-end"><b>Price: </b>Rs. <%=
                                                    orderdetails.orderitems[i].productprice %>/-
                                            </td>
                                            <td class="text-end"><b> Total Price: </b>Rs. <%=
                                                orderdetails.orderitems[i].productprice * orderdetails.orderitems[i].productquantity %>/-
                                        </td>
                                        </tr>
                                    </tbody>
                                    <% } %>
                                        <hr>
                                        <tfoot>
                                            <tr class="fw-bold">
                                                <td colspan="3">TOTAL</td>
                                                <td class="text-end">Rs. <%= orderdetails.total %>/-</td>
                                            </tr>
                                        </tfoot>
                            </table>
                        </div>
                    </div>
                    <!-- Payment -->
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <p><strong> Payment Status:</strong></p>
                                    <p class="badge bg-warning rounded-pill text"
                                    style="color: black;">
                                        <%= orderdetails.paymentmethod %> <br>
                                        </p>
                                        <p style="font-size:large">
                                            Total: Rs. <%= orderdetails.total %>/-
                                    </p>
                                </div>
                                <div class="col-lg-6">
                                    <h3 class="h6">Billing address</h3>
                                    <address>
                                        <strong>
                                            <%= orderdetails.deliveryaddress.name %>
                                            <br>
                                                <%= orderdetails.deliveryaddress.area %>
                                        </strong><br>
                                        <%= orderdetails.deliveryaddress.housenumber %><br>
                                            <%= orderdetails.deliveryaddress.city %><br>
                                                <%= orderdetails.deliveryaddress.state %><br>
                                                    Pin:<%= orderdetails.deliveryaddress.pincode %> <br>
                                    </address>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>