<%-include('adminheader')-%>

    <%-include('adminnav')-%>

        <style>
            .table th,
            .table td {
                padding: 10px;
                /* Adjust the padding as needed */
            }
        </style>
        <div class="container-fluid py-4">
            <div class="row">
                <div class="col-12"> <!-- Adjust the column width as needed -->
                    <div class="card my-4">
                        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                            <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                                <h6 class="text-white text-capitalize ps-3">Coupon Management</h6>
                                <div class="d-flex   align-items-center" style="width: 770px;">
                                    <div style="margin-left: 10px;" class="col-4">
                                        <form action="/searchcoupon" method="post" class="d-flex align-items-center">
                                            <input class="form-control me-2" type="search" placeholder="Search coupon" id="search" name="search">
                                            <div >
                                                <button style="background-color:blue ;color: antiquewhite;padding: 7px;border-radius: 10px;margin-left: 10px;">Search
                                                </button>
                                            </div>
                                        </form>    
                                  </div>
                                    <div class="col-4 text-end" style="margin-left: 450px;">

                                        <a href="/addcoupons">
                                            <button class="btn btn-success btn-sm me-2">Add Coupon
                                            </button></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body px-0 pb-2">
                            <div class="table-responsive p-0">
                                <table class="table align-items-center mb-0">
                                    <thead>
                                        <tr style="text-align: center;">
                                            <th
                                                class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                                Id</th>
                                            <th
                                                class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                                Name</th>
                                            <th
                                                class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                                Code</th>
                                            <th
                                                class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                                Off Percentage</th>
                                            <th
                                                class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                                Max off</th>
                                            <th
                                                class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                                Mininum Amount</th>
                                            <th
                                                class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                                Expiry</th>
                                            <br>
                                        
                                            <th
                                                class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                                Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% coupon.forEach((element,i)=> { %>

                                            <tr style="text-align: center;">
                                                <td class="ml-4">
                                                    <%=i+1%>
                                                </td>
                                                <td class='ml-4'>
                                                    <%= element.couponname %>
                                                </td>
                                                <td class=>
                                                    <%= element.couponcode %>
                                                </td>
                                                <td>
                                                    <%= element.coupondiscount %>
                                                </td>
                                                <td>
                                                    <%= element.maxAmount %>
                                                </td>
                                                <td>
                                                    <%=element.minimumPrice%>
                                                </td>
                                                <td>
                                                    <%= element.expiryDate %>
                                                </td>
                                                
                                                <td>
                                                    <a class="btn btn-primary btn-sm "
                                                        href="/editcoupons?id=<%=element.couponid%>">Edit</a>
                                                    <%if(!element.enable){%>
                                                        <a href="/listcoupon?id=<%=element.couponid%>"
                                                            class="btn btn-primary btn-sm ">List</a>
                                                        <%}else{%>
                                                            <a href="/listcoupon?id=<%=element.couponid%>"
                                                                class="btn btn-danger btn-sm ">Unlist</a>
                                                            <%}%>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                                <% if(locals.page && locals.limit && locals.countpages){ %>

                                    <div class="align-items-center">
                                        <nav aria-label="Page navigation example" style="width: 30%; margin: auto;">
                                            <ul class="pagination">
                                                <li class="page-item">
                                                    <a class="page-link"
                                                        href="/coupons?&page=<%= Math.max(1, page - 1) %>&pagesize=<%= limit %>"
                                                        aria-label="Previous">
                                                        <span aria-hidden="true">&laquo;</span>
                                                        <span class="sr-only">Previous</span>
                                                    </a>
                                                </li>
                                                <% for(let i=1; i <=2; i++) { %>
                                                    <li class="page-item <%= i === page ? 'active' : 'No data' %>">
                                                        <a class="page-link"
                                                            href="/coupons?&page=<%= i %>&pagesize=<%= limit %>">
                                                            <%= i %>
                                                        </a>
                                                    </li>
                                                    <% } %>
                                                        <li class="page-item">
                                                            <a class="page-link"
                                                                href="/coupons?&page=<%= Math.max(2, page + 1) %>&pagesize=<%= limit %>"
                                                                aria-label="Next">
                                                                <span aria-hidden="true">&raquo;</span>
                                                                <span class="sr-only">Next</span>
                                                            </a>
                                                        </li>
                                            </ul>
                                        </nav>
                                    </div>
                                    <%}%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Include Bootstrap JS and jQuery -->
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.5.0/dist/js/bootstrap.min.js"></script>
        </body>

        </html>