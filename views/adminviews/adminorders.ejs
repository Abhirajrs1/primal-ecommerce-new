<%-include('adminheader')-%>
    <%-include('adminnav')-%>
        <div class="container-fluid py-4">
            <div class="row">
                <div class="col-12 ">
                    <div class="card my-4">
                        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                            <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                                <h6 class="text-white text-capitalize ps-3">ORDER MANAGEMENT</h6>
                                <div class="d-flex align-items-center" style="margin-left: 2%;">
                                    <div class="col-4">
                                        <input type="text" class="form-control me-2" placeholder="Search...">
                                    </div>
                                    <div>
                                        <button
                                            style="background-color:blue ;color: antiquewhite;padding: 7px;border-radius: 10px;margin-left: 10px;">Search
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- orders headings -->
                        <div class="card-body px-0 pb-2">
                            <div class="table-responsive p-0">
                                <table class="table align-items-center mb-0">
                                    <thead>
                                        <tr style="text-align: center;">
                                            <th
                                                class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                                ID</th>
                                            <th
                                                class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                                USEREMAIL</th>
                                            <th
                                                class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                                TOTAL PRICE</th>
                                            <th
                                                class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                                QUANTITY</th>
                                            <th
                                                class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                                STATUS</th>
                                            <th
                                                class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                                ORDERS VIEW</th>

                                        </tr>
                                    </thead>
                                    <!-- order body start -->
                                    <tbody>
                                        <% for (let i=0; i < orders.length; i++) { %>
                                            <tr style="text-align: center;">
                                                <td>
                                                    <%= i + 1 %>
                                                </td>
                                                <td>
                                                    <%= orders[i].email %>
                                                </td>
                                                <td>
                                                    <%= orders[i].total %>
                                                </td>
                                                <td>
                                                    <% let totalProductQuantity=0; %>
                                                        <% for (let j=0; j < orders[i].orderitems.length; j++) { %>
                                                            <% totalProductQuantity
                                                                +=orders[i].orderitems[j].productquantity; %>
                                                                <% } %>
                                                                    <%= totalProductQuantity %>
                                                </td>
                                                <td>
                                                    <%=orders[i].status%>
                                                </td>
                                                <td>

                                                    <a href="/orderdetails?id=<%=orders[i].orderid%>"
                                                        class="btn btn-danger btn-sm">VIEW ORDERS</a>

                                                </td>
                                            </tr>
                                            <% } %>

                                    </tbody>
                                    <!-- order body end  -->
                                </table>
                                <!-- pagination start-->
                                <% if(locals.page && locals.limit && locals.countpages){ %>

                                    <div class="align-items-center">
                                        <nav aria-label="Page navigation example" style="width: 30%; margin: auto;">
                                            <ul class="pagination">
                                                <li class="page-item">
                                                    <a class="page-link"
                                                        href="/ordermgt?&page=<%= Math.max(1, page - 1) %>&pagesize=<%= limit %>"
                                                        aria-label="Previous">
                                                        <span aria-hidden="true">&laquo;</span>
                                                        <span class="sr-only">Previous</span>
                                                    </a>
                                                </li>
                                                <% for(let i=1; i <=2; i++) { %>
                                                    <li class="page-item <%= i === page ? 'active' : 'No data' %>">
                                                        <a class="page-link"
                                                            href="/ordermgt?&page=<%= i %>&pagesize=<%= limit %>">
                                                            <%= i %>
                                                        </a>
                                                    </li>
                                                    <% } %>
                                                        <li class="page-item">
                                                            <a class="page-link"
                                                                href="/ordermgt?&page=<%= Math.max(2, page + 1) %>&pagesize=<%= limit %>"
                                                                aria-label="Next">
                                                                <span aria-hidden="true">&raquo;</span>
                                                                <span class="sr-only">Next</span>
                                                            </a>
                                                        </li>
                                            </ul>
                                        </nav>
                                    </div>
                                    <%}%>
                                        <!-- pagination end  -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Include Bootstrap JS and jQuery -->
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.5.0/dist/js/bootstrap.min.js"></script>
        </body>

        </html>